<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activities.FormularioAdopcion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Información Personal -->
        <TextView
            android:text="Información Personal del Adoptante"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/check_actualizado"
            android:text="Acepto que tengo mi perfil actualizado con mis datos correctos."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Información sobre el Hogar -->
        <TextView
            android:text="Información sobre el Hogar"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/tipo_vivienda"
            android:hint="¿Tipo de vivienda? (Casa, departamento, etc.)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/patio_jardin"
            android:hint="¿Tienes patio o jardín? (Sí/No)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/otros_animales"
            android:hint="¿Otros animales en casa? (Sí/No)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ninos_hogar"
            android:hint="¿Viven niños en el hogar? (Sí/No)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Estilo de Vida -->
        <TextView
            android:text="Estilo de Vida y Responsabilidad"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/tiempo_en_casa"
            android:hint="¿Pasas en casa diariamente? (Sí/No)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/mascotas_anteriores"
            android:hint="¿Has tenido mascotas antes? (Sí/No)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Declaración y Compromiso -->
        <TextView
            android:text="Declaración y Compromiso"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/check_responsabilidad"
            android:text="✅ Acepto ser responsable del bienestar de la mascota."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/check_seguimiento"
            android:text="✅ Acepto que un refugio realice seguimiento post-adopción."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/check_compromiso"
            android:text="✅ Entiendo que esta adopción es un compromiso de por vida."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Firma -->
        <EditText
            android:id="@+id/firma_digital"
            android:hint="Firma digital o nombre completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:indicatorSize="48dp"
            app:trackThickness="4dp"
            app:indicatorColor="@color/colorPrimary"/>

        <!-- Botón Enviar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_enviar_formulario"
            android:text="Enviar Solicitud"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
